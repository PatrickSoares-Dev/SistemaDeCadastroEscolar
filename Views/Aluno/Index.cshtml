@{
    ViewData["Title"] = "Contato";
}

<h1 class="page-header">Alunos<small>| Aqui você pode administrar os alunos</small> </h1>

<div class="panel panel-inverse">

    <div class="panel-heading">
        <h4 class="panel-title">Tabela de Alunos</h4>
    </div>

    <template id="my-templateAlunoCreate">
        <swal-title>
            Adicionar Aluno
        </swal-title>

        <swal-html>

            <div class="row" style="overflow-y: hidden !important; width: 99%;">
                <div class="col-12">
                    <label for="select-required" class="float-left" style="font-size: 15px;">Nome do aluno</label>
                    <input class="form-control" id="inputNome" type=text name="inputNome" placeholder="Nome completo" />
                </div>
            </div>

            <div class="row" style="overflow-y: hidden !important; width: 99%; margin-top: 18px;">

                <div class="col-8">
                    <label for="select-required" class="float-left" style="font-size: 15px;">CPF</label>
                    <input class="form-control" id="inputNome" type=text name="inputCPF" placeholder="CPF" />
                </div>

                <div class="col-4">
                    <label for="select-required" class="float-left" style="font-size: 15px;">Data de nascimento</label>
                    <input class="form-control" id="inputNome" type=text name="inputDataNascimento" placeholder="Data de nascimento" />
                </div>

            </div>

            <div class="row" style="overflow-y: hidden !important; width: 99%; margin-top: 18px;">

                <div class="col-8">

                    <label for="select-required" class="float-left" style="font-size: 15px;">Escola</label>
                    <select class="form-control" style="width: 100%;" id="optionEscola" name="Escola" data-parsley-required="true">
                        <option disabled selected value="Selecione">Selecione</option>
                    </select>

                </div>

                <div class="col-4">

                    <label for="select-required" class="float-left" style="font-size: 15px;">Turma</label>
                    <select class="form-control" style="width: 100%;" id="optionTurma" name="Turma" data-parsley-required="true">
                        <option disabled selected value="Selecione">Selecione</option>
                    </select>

                </div>
            </div>

            <button type="submit" style="width: 7rem; margin-top: 18px; margin-right: 1.7rem;" class="btn btn-primary float-right" id="btnAddAluno">Cadastar</button>


        </swal-html>

        <swal-param name="allowEscapeKey" value="false" />
        <swal-param name="customClass"
                    value='{ "popup": "my-popup" }' />
    </template>



    <div class="row" style="margin-left: -0px !important;">
        <div class="tab-content col-xl-11" style="margin-left: -0px !important; width: 95% !important;">
            <div class="tab-pane fade active show" id="default-tab-1">
                <div class="">
                    <div class="panel-body" style="width: 108% !important;">

                        @*
                        Tabela de Contatos*@

                        <div class="">
                            <button type="button" class="btn btn-primary float-right" id="btnAddAluno">Adicionar novo aluno</button>
                        </div>

                        <div class="">
                            <h6 class="display-6">Lista de contatos</h6>
                        </div>

                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Nome Completo</th>
                                    <th scope="col">CPF</th>
                                    <th scope="col">Data de nascimento</th>
                                    <th scope="col">Matricula</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>Patrick Gasoso</td>
                                    <td>176.321.007-31</td>
                                    <td>07/03/2002</td>
